<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#09C"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/appwidget_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/appwidget_ingredients"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/appwidget_ingredients"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="#09C"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/recipe"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold|italic"
            tools:text="Recipe" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/servings"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/appwidget_servings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/default_servings"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            tools:text="4" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="4dp"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/none_selected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:text="@string/no_recipe_selected"
            android:textSize="16sp"
            android:visibility="visible"
            tools:text="No recipe selected." />

        <ListView
            android:id="@+id/appwidget_ingredients"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            tools:context="com.bizarrecoding.example.bakemania.BakeListWidget"
            tools:listitem="@layout/ingredient_item" />

    </FrameLayout>
</RelativeLayout>